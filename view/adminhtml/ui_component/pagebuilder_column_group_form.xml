<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="general">
        <field name="gap" sortOrder="30" formElement="input">
            <settings>
                <label translate="true">Gap</label>
                <additionalClasses>
                    <class name="admin__field-small">true</class>
                </additionalClasses>
                <addAfter translate="true">px</addAfter>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                </validation>
            </settings>
        </field>
        <container name="small_screen_modes" sortOrder="40" component="Magento_Ui/js/form/components/group">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="breakLine" xsi:type="boolean">true</item>
                </item>
            </argument>
            <field name="tablet_mode" sortOrder="10" formElement="select">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="string">1</item>
                    </item>
                </argument>
                <settings>
                    <label translate="true">Tablet and Phone Modes</label>
                    <notice>Tablet: 640-767px</notice>
                    <additionalClasses>
                        <class name="admin__field-small">true</class>
                    </additionalClasses>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options>
                                <option name="0" xsi:type="array">
                                    <item name="value" xsi:type="string">1</item>
                                    <item name="label" xsi:type="string">1 Column</item>
                                </option>
                                <option name="1" xsi:type="array">
                                    <item name="value" xsi:type="string">2</item>
                                    <item name="label" xsi:type="string">2 Columns</item>
                                </option>
                                <option name="2" xsi:type="array">
                                    <item name="value" xsi:type="string">3</item>
                                    <item name="label" xsi:type="string">3 Columns</item>
                                </option>
                                <option name="3" xsi:type="array">
                                    <item name="value" xsi:type="string">desktop</item>
                                    <item name="label" xsi:type="string">Use desktop settings</item>
                                </option>
                            </options>
                        </settings>
                    </select>
                </formElements>
            </field>
            <field name="mobile_mode" sortOrder="20" formElement="select">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="default" xsi:type="string">1</item>
                    </item>
                </argument>
                <settings>
                    <notice>Phone: 375-639px</notice>
                    <tooltip>
                        <link>https://meliosbuilder.com/docs#columns</link>
                        <description translate="true"><![CDATA[Need more options? Follow the <a href="https://meliosbuilder.com/docs#columns" target="_blank" rel="noopener">docs</a> to read about advanced usage.]]></description>
                    </tooltip>
                    <additionalClasses>
                        <class name="admin__field-medium">true</class>
                    </additionalClasses>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options>
                                <option name="0" xsi:type="array">
                                    <item name="value" xsi:type="string">1</item>
                                    <item name="label" xsi:type="string">1 Column</item>
                                </option>
                                <option name="1" xsi:type="array">
                                    <item name="value" xsi:type="string">2</item>
                                    <item name="label" xsi:type="string">2 Columns</item>
                                </option>
                                <option name="2" xsi:type="array">
                                    <item name="value" xsi:type="string">3</item>
                                    <item name="label" xsi:type="string">3 Columns</item>
                                </option>
                                <option name="3" xsi:type="array">
                                    <item name="value" xsi:type="string">desktop</item>
                                    <item name="label" xsi:type="string">Use desktop settings</item>
                                </option>
                            </options>
                        </settings>
                    </select>
                </formElements>
            </field>
        </container>
    </fieldset>
</form>
